<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/gradient"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".DistributorActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Distributor Portal"
        android:textSize="25sp"
        android:layout_marginBottom="50sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/voucherBT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:background="@drawable/button_gradient"
        android:text="Distribute Voucher"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/userBT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:background="@drawable/button_gradient"
        android:text="Add User"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/redeemBT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/button_gradient_green"
        android:text="Redeem Voucher"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/gradient"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

</androidx.appcompat.widget.LinearLayoutCompat>